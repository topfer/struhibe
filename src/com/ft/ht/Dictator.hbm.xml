<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.ft.ht.Dictator" table="DICTATOR">

    <meta attribute="class-description">
      Class that represents a single parson who deserves to be shot
      @author Thomas Fazekas
    </meta>

    <id name="id" type="int" column="DICTATOR_ID">
      <meta attribute="scope-set">protected</meta>
      <generator class="native"/>
    </id>

    <property name="firstName" type="string" not-null="true"/>

    <property name="lastName" type="string" not-null="true"/>

    <property name="birthDate" type="date"/>

    <property name="added" type="date">
      <meta attribute="field-description">Date when this person was added to the DB</meta>
    </property>

    <property name="inPower" type="time">
      <meta attribute="field-description">Represents the duration an individual was at power</meta>
    </property>

    <property name="offsprings" type="short"/>

  </class>
</hibernate-mapping>
